{
  "evaluation": {
    "source": {
      "name": "risky_positions",
      "display": "risky_positions",
      "aggregation": "AGGREGATION_UNSPECIFIED"
    },
    "comparison_operator": "GREATER_THAN",
    "threshold": {
      "value": {
        "double_value": 0.0
      }
    },
    "notification": {
      "retrigger_seconds": 0,
      "notify_on_ok": false
    }
  },
  "schedule": {
    "quartz_cron_schedule": "33 38 */1 * * ?",
    "timezone_id": "Asia/Seoul"
  },
  "query_lines": [
    "SELECT",
    "  COUNT(*) AS risky_positions",
    "FROM demo_catalog.demo_schema.silver_futures_positions",
    "WHERE ABS(roe) > 0.2",
    "  AND event_time >= now() - INTERVAL 30 MINUTES;"
  ]
}
